<UserControl x:Class="Lotus.Windows.LotusViewerImage"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:ctrl="http://schemas.lotus.windows"
			mc:Ignorable="d" 
			d:DesignHeight="300" d:DesignWidth="300"
			Loaded="OnUserControl_Loaded">
	<ScrollViewer Grid.Row="2" CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
		<ctrl:LotusContentViewer x:Name="contentViewer">
			<Image x:Name="imagePresent" Width="1024" Height="1024" Stretch="Fill"/>
		</ctrl:LotusContentViewer>
	</ScrollViewer>
</UserControl>
